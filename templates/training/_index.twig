{% extends '_layout' %}

{% set bodyClass = 'training training_index' %}
{% block pageStyle %}
<link href="{{ conf.cdnBaseUrl }}/assets/build/css/training.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block content %}
  <main role="main">
    <section class='hero-training'>
      <div class='module'>
        <div class="hero-body">
          <h1>{{ entry.heading|trim|striptags('<strong><b><u><em><i>')|raw }}</h1>
        </div>
      </div>
    </section>
    {% set blockData = entry.trainingBody %}
    <section class="approachs">
      <div class="module">
        <h2>{{ blockData[0].heading|striptags('<strong><b><u><em><i><a>')|raw }}</h2>
        {{ entry.shortDescription }}
        <ul class="approach-items">
        {% for block in blockData %}
          {% if block.type == 'approachs' %}
            <li>

                {% if block.iconApproach.img %}
                  <img src="/uploads/images/icons/{{ block.iconApproach.img[0].filename }}" alt="{{ block.iconApproach.img[0].title }}"/>
                {% endif %}
                <h3>{{ block.approachHeader }}</h3>
                <p>{{ block.approachDescription }}</p>

            </li>
          {% endif %}
        {% endfor %}
        </ul>
      </div>
    </section>
    {% if (blockData[4] is defined) %}
    <section class="contact global-content">
      <div class="module">
        {{ blockData[4].htmlBlock }}
        <a class="btn btn-primary" href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#115;&#97;&#108;&#101;&#115;&#64;&#108;&#101;&#97;&#110;&#107;&#105;&#116;&#46;&#99;&#111;&#109;">Contact a Leankit Consultant</a>
      </div>
    </section>
    {% endif %}
    <section class="training-consulting">
      <div class="module">
        {% if (blockData[5] is defined) %}
          <h2>{{ blockData[5].heading|striptags('<strong><b><u><em><i><a>')|raw }}</h2>
        {% endif %}
        <ul class="approach-items">
        {% for block in blockData %}
          {% if block.type == 'training' %}
            <li>

                {% if block.icon.img %}
                  <img src="/uploads/images/icons/{{ block.icon.img[0].filename }}" alt="{{ block.icon.img[0].title }}"/>
                {% endif %}
                <h3>{{ block.heading }}</h3>
                <p>{{ block.description }}</p>

            </li>
          {% endif %}
        {% endfor %}
        </ul>
      </div>
    </section>
    {% if (blockData[11] is defined) %}
    <section class="more-contact global-content">
      <div class="module">
        {{ blockData[11].htmlBlock }}
        <a class="btn btn-primary" href="&#109;&#97;&#105;&#108;&#116;&#111;&#58;&#115;&#97;&#108;&#101;&#115;&#64;&#108;&#101;&#97;&#110;&#107;&#105;&#116;&#46;&#99;&#111;&#109;">Contact a Leankit Consultant</a>
      </div>
    </section>
    {% endif %}
  </main>
{% endblock content %}
